﻿ 
@model IEnumerable<SearchResultProductsDTO.ProductoOUCRDTO>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.NombreOUCR)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.DescripcionOUCR)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.PrecioOUCR)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreOUCR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionOUCR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioOUCR)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Ver", "Details", new {  id=item.Id  }) |
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>